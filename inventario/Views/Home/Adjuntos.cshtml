@model inventario.Models.Adjunto
    @{ 
        List<inventario.Models.Adjunto> adjuntos = ViewBag.Adjuntos;
    }

@using (Html.BeginForm("GuardarAdjunto", "Home", FormMethod.Post, new { id = "frm-adjuntos" }))
{
    @Html.HiddenFor(x => x.Alumno_id)
    <div class="panel panel-default">
        <div class="panel-heading">Adjuntos</div>
        <div class="panel-body">
            <div class="form-group">
                <label>Seleccione un Documento a subir</label>
                <input type="file" name="Archivo"/>
            </div>
                
        </div>
    </div>
    <div class="text-right">
        <button data-ajax="true" data-confirm="Esta seguro de adjuntar este curso archivo?" type="submit" class="btn btn-primar">Guardar</button>
    </div>
}

<!--Cursos elegidos-->
<ul class="list-group">
    @foreach (var a in adjuntos)
    {
        <li class="list-group-item">
            <a href="~/Uploads/@a.Archivo" target="_blank">
            @a.Archivo
            </a>
        </li>
    }
</ul>
